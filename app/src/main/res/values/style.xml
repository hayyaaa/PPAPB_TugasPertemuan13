<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="hint">
        <item name="android:layout_marginTop">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">0dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="blue_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="white_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>